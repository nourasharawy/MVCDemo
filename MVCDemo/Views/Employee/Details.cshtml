@model MVCDemo.Models.Employee

@{
    ViewBag.Title = "Employee Details";
}

<h2> "Emp Details"</h2>

<table>
    <tr>
        <td>Employee ID : </td>
        <td>@Model.EmployeeId  </td>
    </tr>

    <tr>
        <td>Employee Name : </td>
        <td>@Model.Name  </td>
    </tr> 

    <tr>
        <td>Employee Gender : </td>
        <td>@Model.Gender  </td>
    </tr>

    <tr>
        <td>Employee City : </td>
        <td>@Model.City  </td>
    </tr>
   
   
</table>

@Html.ActionLink("Back to List" , "Index" , new { DepartmentId = Model.DepartmentId}) 